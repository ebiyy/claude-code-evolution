{
  "name": "claude-code-evolution",
  "version": "1.0.0",
  "description": "Self-evolving development system for Claude Code",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && pip install -r requirements.txt",
    "init": "./core/init-system.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . && pylint **/*.py",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "evolution:check": "python core/evolution-engine.py check",
    "evolution:trigger": "python core/evolution-engine.py trigger",
    "pattern:analyze": "python core/pattern-detector.py",
    "backup": "./tools/backup/backup-to-gist.sh",
    "metrics": "python tools/analytics/generate-metrics.py",
    "docs:build": "docsify serve ./docs"
  },
  "keywords": [
    "claude",
    "ai",
    "development",
    "automation",
    "self-learning",
    "agents",
    "rag"
  ],
  "author": "ebiyy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebiyy/claude-code-evolution.git"
  },
  "bugs": {
    "url": "https://github.com/ebiyy/claude-code-evolution/issues"
  },
  "homepage": "https://github.com/ebiyy/claude-code-evolution#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "chromadb": "^1.5.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}