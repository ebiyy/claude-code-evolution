# Claude Code Evolution System - Environment Variables

# API Keys (Required for RAG and embedding features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database Configuration (Choose one)
# ChromaDB (Local development)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Pinecone (Production)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX=claude-evolution

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_key

# Domain Configuration
CLAUDE_DOMAIN=web  # Options: web, mobile, backend, ml, embedded

# Memory Tiers Configuration
MEMORY_L1_MAX_FILES=10
MEMORY_L2_DAYS=7
MEMORY_L3_DAYS=30

# Evolution Settings
PATTERN_THRESHOLD=3  # Minimum occurrences to become a pattern
EVOLUTION_CHECK_INTERVAL=86400  # 24 hours in seconds

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token
GIST_BACKUP_ENABLED=false

# Logging
LOG_LEVEL=info  # Options: debug, info, warning, error
LOG_FILE=.claude/logs/evolution.log